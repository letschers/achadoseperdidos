<%= form_tag(autenticacao_path, class: "col-md-6 col-md-offset-3 form-horizontal", method: "post") do |f| %>

<fieldset>
  <legend><%= t(:login) %> - Achados e Perdidos </legend>
  <div class="center-block">
    <div class="form-group">
      <%= label_tag :login, t(:login), class: "col-md-2 control-label", for: :login %>
      <div class="col-md-5">
        <%= text_field_tag :login, nil, class: "form-control", id: :login %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, t(:password), class: "col-md-2 control-label", for: :password %>
      <div class="col-md-5">
        <%= password_field_tag :password, nil, class: "form-control", id: :password %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10 col-md-offset-2">
        <%= submit_tag t(:login), class: "btn btn-lg btn-primary" %>
      </div>
    </div>
  </div>
</fieldset>
<% end %>