<%= form_with(model: dado, local: true, html: {class: "form-horizontal"}) do |form| %>
<% if dado.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(dado.errors.count, "error") %> prohibited this dado from being saved:</h2>

  <ul>
    <% dado.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div><br ></div>

<div class="col-md-6 col-md-offset-3">

    <fieldset>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h4 class="panel-title">Novo</h4>
        </div>
        <div class="form-group">

          <label for="inputTitulo" class="col-lg-2 control-label">Título</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" id="inputEmail" placeholder="Título">
          </div>
        </div>

        <div class="form-group">
          <label for="inputReward" class="col-lg-2 control-label">Recompensa</label>
          <div class="col-lg-10">
            <input type="password" class="form-control" id="inputReward" placeholder="Recompensa">
          </div>
        </div>

        <div class="form-group">
          <label for="textArea" class="col-lg-2 control-label">Descrição</label>
          <div class="col-lg-10">
            <textarea class="form-control" rows="3" id="textArea" placeholder="Descrição"></textarea>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">Tipo</label>
          <div class="col-lg-10">
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios1" value="true" checked="">
                Achado
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="optionsRadios" id="optionsRadios2" value="false">
                Perdido
              </label>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="inputDate" class="col-lg-2 control-label">Data Ocorrido</label>
          <div class="col-lg-10">
            <input type="inputDate" class="form-control" id="inputDate" placeholder="Data">
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10">
            <br>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10">
            <br>
          </div>
        </div>
      </div>
    </fieldset>
</div>
<% end %>
