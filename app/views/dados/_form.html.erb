<%= form_with(model: dado, local: true, html: {class: "form-horizontal"}) do |form| %>
<% if dado.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(dado.errors.count, "error") %> prohibited this dado from being saved:</h2>

  <ul>
    <% dado.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="panel-body" >
  <div class="form-group">
    <%= form.label :titulo, "Título", class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= form.text_field :titulo %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :foto, "Foto", class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
     <%= form.file_field :foto %>
   </div>
 </div>

 <div class="form-group">
  <%= form.label :descricao, "Descrição", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.text_area :descricao %>
  </div>
</div>

<div class="form-group">
 <%= form.label :tipo, "Tipo", class: "col-lg-2 control-label" %>
 <div class="col-lg-10">
  <div class="radio">
    <%= form.label :tipo do %>
    <%= form.radio_button :tipo, 'achado', checked: false %>
    Achado
    <% end %>
  </div>
  <div class="radio">
    <%= form.label :tipo do %>
    <%= form.radio_button :tipo, 'perdido', checked: false %>
    Perdido
    <% end %>
  </div>
</div>
</div>

<div class="form-group">
  <%= form.label :data, "Data", class: "col-lg-2 control-label" %>
  <div class="col-lg-10">
    <%= form.date_select :dataocorrido, {}, {class: "form-control col-md-1", style: 'width: 20%; margin-right: 5px;'} %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-10">
    <br>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
    <% if @dado.persisted? %>
    <%= form.submit('Editar', class: 'btn btn-danger') %>

    <% else %>
    <%= form.submit('Criar', class: 'btn btn-danger') %>

    <% end %>
    <%= link_to 'Voltar', dados_path, class: "btn btn-success" %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-10">
    <br>
  </div>
</div>
</div>
<% end %>
